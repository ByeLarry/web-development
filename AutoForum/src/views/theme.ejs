<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="http://localhost/main.css" >
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="icon" href="http://localhost/AF.jpg" type="image/png">
    <title><%= SQLdata.theme[0].theme_name %></title>
</head>
<body>
  <div class="wrapper">
    <%- include ('./components/header.ejs')%>
    <div class="main">
      <div class="container">
        <div class="row">
          <div class="col-md-8">
            <div class="card" >
              <div class="card-header">
                <h2><%= SQLdata.theme[0].theme_name %></h2>
              </div>
              <div class="card-body">
                <ul class="list-group" id="threadList">
                <%- include('./components/threadList.ejs') %>
                </ul>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <% if (username != undefined){ %>
            <div class="card">
              <div class="card-header">
                <h2>Создать новое обсуждение</h2>
              </div>
              <div class="card-body d-grid gap-3">
                <div class="form-group d-grid gap-3">
                  <input autocomplete="off" type="text" class="form-control" id="thread-input", placeholder="Название темы:">
                </div>
                <button class="btn btn-primary" id="create-thread-button">Создать</button>
              </div>
            </div>
            <% } %>
            <div class="card">
              <div class="card-header">
                <h2>Сортировка</h2>
              </div>
              <div class="card-body">
                <button class="btn btn-secondary" style="margin-right: 10px;" id="sortID">По порядку</button>
                <button class="btn btn-secondary" style="margin-right: 10px;" id="sortASC">А-Я</button>
                <button class="btn btn-secondary" style="margin-right: 10px;" id="sortDESC">Я-А</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <%- include ('./components/footer.ejs')%>
  </div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
<script type="module" src="http://localhost/theme.js"></script>
</body>
</html>
