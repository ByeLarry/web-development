<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="main.css" >
    <link rel="stylesheet" href="/bootstrap-5.2.0-dist/css/bootstrap.min.css">
    <link rel="icon" href="/bootstrap-5.2.0-dist/img/AF.png" type="image/png">
    <title>Личный кабинет</title>
</head>
<body>
  <div class="wrapper">
    <%- include ('./components/header.ejs')%><br>
    <div class="main">
      <div class="header-title">
        <h2> Личный кабинет </h2>
      </div><br>
      <% if(username != undefined){ %>
      <div class="col-md-7 mx-auto  ">
        <div class="card">
            <div class="card-header">
                <h6>Изменить пароль</h6>
            </div>
            <div class="card-body">
                <input type="text" class="form-control" placeholder="Старый пароль" ><br>
                <input type="password" class="form-control" placeholder="Новый пароль" >
            </div>
        </div>
        <div class="col-md-5">
          <div class="row">
            <div class="col">
              <button class="btn btn-danger">Удалить аккаунт</button>
            </div>
            <div class="col">
              <button type="button" class="btn btn-danger" id="userExit">Выйти из аккаунта</button>
            </div>
        </div>
        </div>
        </div>
      <% } %>
      </div>
        <%- include ('./components/footer.ejs')%>
    </div>
<script src="/bootstrap-5.2.0-dist/js/bootstrap.bundle.min.js"></script>
<script type="module" src="../scripts/userPage.js"></script>
</body>
</html>